<%= render partial: 'shared/notice_success' %>

<h1 class="text-primary">Areas</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= link_to image_tag('edit.png'), edit_area_path(area) %></td>
        <td><%= link_to image_tag('destroy.png'), area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @areas, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<%= link_to 'New Area', new_area_path, class: 'btn btn-primary' %>
